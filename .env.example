# .env.example (local only – do NOT commit the actual .env file)

# Supabase configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# From Meta / Facebook Developer portal (your Instagram app)
INSTAGRAM_APP_ID=123456789012345
INSTAGRAM_APP_SECRET=your_app_secret_here

# Short-lived user token (you get this once from Meta)
INSTAGRAM_USER_SHORT_LIVED_TOKEN=your_short_lived_token_from_meta_here

# Long-lived token – leave empty initially, then fill after exchanging the short-lived token
# Use Meta's Graph API Explorer or a token exchange script to convert short-lived to long-lived token
INSTAGRAM_LONG_LIVED_TOKEN=

# For GitHub Action to talk to Netlify
NETLIFY_AUTH_TOKEN=your_netlify_personal_access_token_here
NETLIFY_SITE_ID=your_netlify_site_id_here

# If the frontend needs the token directly (Vite style) – use same value as INSTAGRAM_LONG_LIVED_TOKEN
VITE_INSTAGRAM_LONG_LIVED_TOKEN=

# Instagram Graph API configuration (used by Netlify serverless function)
IG_ACCESS_TOKEN=your_instagram_long_lived_access_token_here
IG_USER_ID=your_instagram_user_id_here
IG_GRAPH_API_VERSION=v18.0
IG_CACHE_TTL_SECONDS=300
